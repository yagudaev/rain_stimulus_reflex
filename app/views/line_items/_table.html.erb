<%= form_with(model: new_line_item, local: true) do |form| %>
  <table>
    <thead>
      <tr>
        <th>Seller</th>
        <th>Product</th>
        <th>Order</th>
        <th>Quantity</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.seller %></td>
          <td><%= line_item.product %></td>
          <td><%= line_item.order_id %></td>
          <td><%= line_item.quantity %></td>
          <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
          <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <%= render partial: 'line_items/form_fields', locals: { line_item: new_line_item, form: form } %>
    </tbody>
  </table>
<% end %>
